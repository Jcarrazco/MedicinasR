<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #006092">
        <div class="container">
            <div class="navbar-header">
                <img src="~/Images/logo.jpg"/>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li style="font-size: 22px">@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li style="font-size: 22px">@Html.ActionLink("Nosotros", "About", "Home")</li>
                    <li style="font-size: 22px">@Html.ActionLink("Laboratorio", "Contact", "Home")</li>
                    <li style="font-size: 22px">@Html.ActionLink("Contacto", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
        <div class="container-fluid text-right" style="background-color:lightgrey">
            <span>@ViewBag.Date</span>
        </div>
    </div>
    <div class="container-fluid body-content" style="margin-right: 160px">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Medicinas Rosario</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
